<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949F86">

    <View
        android:id="@+id/view_1"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@drawable/chx_background1">
    </View>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  EvaluateUs / 评价我们"
        android:textColor="#036307"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        ></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec" />

    <EditText
        android:id="@+id/et_suggest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@null"
        android:layout_marginTop="200dp"
        android:gravity="start"
        android:hint="请输入您对我们的评价："
        android:textSize="20dp"
        android:padding="50dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/chx_button1"
        android:text="提  交"
        android:textColor="#ffffff"
        android:textSize="22sp">

    </Button>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="280dp"
        app:srcCompat="@drawable/chx_face" />

    <Button
        android:id="@+id/btngal"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/chx_button2"
        android:gravity="center_horizontal"
        android:text="返回主界面"
        android:textColor="#036307"
        android:textSize="20sp" />

</RelativeLayout>