<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949F86">

    <View
        android:id="@+id/view_1"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@drawable/chx_background1">
    </View>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  FindUs / 找到我们"
        android:textColor="#036307"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:id="@+id/knowus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我们的住址：\n北京市海淀区学院路中国农业大学信息与电气工程学院\n邮编：100083"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="30dp"
        ></TextView>
    <Button
        android:id="@+id/btngal"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="115dp"
        android:layout_marginBottom="86dp"
        android:background="@drawable/chx_button2"
        android:gravity="center_horizontal"
        android:text="返回主界面"
        android:textColor="#036307"
        android:textSize="20sp" />

</RelativeLayout>