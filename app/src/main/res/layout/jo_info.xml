<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949F86">

    <View
        android:id="@+id/view_1"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/chx_background1">

    </View>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  作业信息管理"
        android:textColor="#036307"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   \n\n               请选择您要进行的操作："
        android:textColor="#3B5C11"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="120dp"
        android:typeface="sans"
        ></TextView>


    <LinearLayout
        android:id="@+id/UserType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_SearchJoInfo"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="255dp"
            android:background="@drawable/chx_button1"
            android:text="查询作业信息"
            android:textColor="#ffffff"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/btn_AddJoInfo"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/chx_button1"
            android:text="添加作业信息"
            android:textColor="#ffffff"
            android:textSize="25sp">

        </Button>


        <Button
            android:id="@+id/btngal"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/chx_button2"
            android:gravity="center_horizontal"
            android:text="返回主界面"
            android:textColor="#036307"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>
