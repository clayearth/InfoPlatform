<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949F86">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Welcome!\n\n      请选择您要进行的操作："
        android:textColor="#3B5C11"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="100dp"
        android:typeface="sans" />


    <LinearLayout
        android:id="@+id/UserType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/btn_UserType"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="265dp"
            android:background="@drawable/chx_button1"
            android:text="查看用户信息"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_alignParentBottom="true">

        </Button>

        <Button
            android:id="@+id/btn_NoticeType"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/chx_button1"
            android:text="查看公告信息"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">

        </Button>

        <Button
            android:id="@+id/btn_AboutUs"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/chx_button1"
            android:text="关于我们"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">

        </Button>



    </LinearLayout>

</RelativeLayout>



