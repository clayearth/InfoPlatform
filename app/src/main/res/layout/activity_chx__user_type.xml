<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949F86">

    <View
        android:id="@+id/view_1"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/chx_background1">

    </View>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  UserType / 用户类型"
        android:textColor="#036307"
        android:textSize="24sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Welcome!\n\n    请选择您要查看信息的用户类型："
        android:textColor="#3B5C11"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="100dp"
        android:typeface="sans" />




    <LinearLayout
        android:id="@+id/UserType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_Growers"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="225dp"
            android:background="@drawable/chx_button1"
            android:text="种   植   户"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_alignParentBottom="true">

        </Button>

        <Button
            android:id="@+id/btn_PlantProtectionUnit"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/chx_button1"
            android:text="植 保 站 人 员"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">

        </Button>

        <Button
            android:id="@+id/btn_PreventionAndControlOrganization"
            android:layout_width="330dp"
            android:layout_height="58dp"
            android:background="@drawable/chx_button1"
            android:text="防 治 组 织 人 员"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">

        </Button>


        <Button
            android:id="@+id/btngal"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/chx_button2"
            android:gravity="center_horizontal"
            android:text="返回主界面"
            android:textColor="#036307"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/chx_grass3" />

    </LinearLayout>

</RelativeLayout>
